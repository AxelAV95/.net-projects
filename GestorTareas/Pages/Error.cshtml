@page "/Error"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="error-container">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle text-warning"></i>
        </div>
        
        <h1 class="display-4">¡Oops! Algo salió mal</h1>
        
        <p class="lead">
            Lo sentimos, pero ocurrió un error inesperado.
        </p>
        
        @if (Model.ShowRequestId)
        {
            <div class="alert alert-info">
                <strong>ID de solicitud:</strong> @Model.RequestId
            </div>
        }
        
        <div class="mt-4">
            <a asp-page="/Index" class="btn btn-primary">
                <i class="fas fa-home"></i> Ir al Inicio
            </a>
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Tareas/Index" class="btn btn-outline-primary ms-2">
                    <i class="fas fa-tasks"></i> Mis Tareas
                </a>
            }
        </div>
        
        <div class="mt-3">
            <small class="text-muted">
                Si el problema persiste, por favor contacta al soporte técnico.
            </small>
        </div>
    </div>
</div>

<style>
.error-container {
    margin-top: 2rem;
    margin-bottom: 2rem;
}

.error-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}
</style>