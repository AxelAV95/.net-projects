@{
    var size = ViewData["Size"]?.ToString() ?? "md";
    var color = ViewData["Color"]?.ToString() ?? "primary";
    var text = ViewData["Text"]?.ToString() ?? "Cargando...";
}

<div class="d-flex justify-content-center align-items-center loading-container">
    <div class="text-center">
        <div class="spinner-border text-@color @(size == "sm" ? "spinner-border-sm" : size == "lg" ? "spinner-border-lg" : "")" role="status">
            <span class="visually-hidden">@text</span>
        </div>
        <div class="mt-2">
            <small class="text-muted">@text</small>
        </div>
    </div>
</div>

<style>
.loading-container {
    min-height: 200px;
}

.spinner-border-lg {
    width: 3rem;
    height: 3rem;
}
</style>